{
    "name": "base",
    "version": "1.0.0",
    "description": "FOS 207 'De Eekhoorn'",
    "main": "gulpfile.js",
    "sass": {
        "files": {
            "src": "resources/sass/main.scss",
            "dest": "public/css/",
            "file": "style.css"
        },
        "watch": "resources/sass/**/*.scss"
    },
    "img": {
        "files": {
            "src": "resources/assets/img/**/*",
            "dest": "public/img/"
        },
        "watch": "resources/assets/img/**/*"
    },
    "docs": {
        "files": {
            "src": "resources/assets/docs/**/*",
            "dest": "public/docs/"
        },
        "watch": "resources/assets/docs/**/*"
    },
    "fonts": {
        "files": {
            "src": "resources/assets/fonts/**/*",
            "dest": "public/fonts/"
        },
        "watch": "resources/assets/fonts/**/*"
    },
    "devDependencies": {
        "gulp": "^4.0.2",
        "gulp-notify": "^3.2.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^4.1.0"
    },
    "scripts": {
        "build": "gulp",
        "dev": "gulp dev"
    },
    "author": "Orry Verpoort",
    "license": "ISC",
    "dependencies": {
        "gulp-cli": "^2.3.0",
        "gulp-copy": "^4.0.1"
    }
}
