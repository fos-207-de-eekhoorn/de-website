{
    "name": "base",
    "version": "1.0.0",
    "description": "FOS 207 'De Eekhoorn'",
    "main": "gulpfile.js",
    "js": {
        "files": [
            {
                "src": [
                    "resources/assets/js/**/*.js"
                ],
                "dest": "public/js/",
                "file": "main.js"
            }
        ],
        "hint": {
            "src": [
                "resources/assets/js/**/*.js"
            ]
        },
        "watch": "resources/assets/js/**/*.js"
    },
    "sass": {
        "files": [
            {
                "src": "resources/assets/scss/main.scss",
                "dest": "public/css/",
                "file": "style.css"
            }
        ],
        "hint": {
            "src": [
                "resources/assets/scss/**/*.scss",
                "!./src/scss/base/_normalize.scss"
            ]
        },
        "watch": "resources/assets/scss/**/*.scss",
        "autoprefixer": {
            "browserslist": [
                "last 1 version",
                "> 1%",
                "IE 10"
            ]
        }
    },
    "img": {
        "src": "resources/assets/img/**/*",
        "dest": "public/img/",
        "watch": "resources/assets/img/**/*"
    },
    "fonts": {
        "src": "resources/assets/fonts/**/*",
        "dest": "public/fonts/",
        "watch": "resources/assets/fonts/**/*"
    },
    "devDependencies": {
        "file-exists": "^1.0.0",
        "gulp": "^4.0.0",
        "gulp-autoprefixer": "^7.0.0",
        "gulp-bless": "^4.0.1",
        "gulp-cached": "^1.1.1",
        "gulp-clean-css": "^4.2.0",
        "gulp-concat": "^2.6.1",
        "gulp-copy": "^4.0.1",
        "gulp-notify": "^3.2.0",
        "gulp-plumber": "^1.2.1",
        "gulp-rename": "^1.4.0",
        "gulp-sass": "^3.0.0",
        "gulp-scss-lint": "^1.0.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-uglify": "^3.0.2"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": [
        "Orry Verpoort",
        "Sander Marin"
    ],
    "license": "ISC",
    "dependencies": {
        "gulp-cli": "^2.2.0"
    }
}
